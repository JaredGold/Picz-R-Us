        <% else %>
          <%= link_to current_user.username.capitalize, new_profile_path, class: "hover:text-purple-700 hover:text-opacity-90 font-light" %>
        <% end %>
      <% end %>
    </div>

    <div>
      <% if !user_signed_in? %>
        <%= link_to "Sign in/up", new_user_session_path, class: "hover:text-purple-700 hover:text-opacity-90 font-light" %>
      <% else %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "hover:text-purple-700 hover:text-opacity-90 font-light" %>
      <% end %>
    </div>
  
  </div>

