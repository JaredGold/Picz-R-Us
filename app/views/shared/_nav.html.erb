<nav class=" flex justify-between py-3 text-base px-2 shadow bg-gray-50 ">
  
  <div>
    <%= link_to "Home", root_path, class: "hover:text-purple-700 hover:text-opacity-90 font-light" %>
  </div>

  <div class="flex justify-between">
    <div class="pr-4">
      <% if user_signed_in? %>
        <% if current_user.profile == nil %>
