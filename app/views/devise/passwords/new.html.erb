<div class='sign-in-page flex justify-center items-center'>
  <div class='border rounded-3xl border-black border-opacity-25 bg-white shadow-lg sm:4/5 lg:w-2/5  flex flex-col justify-start' >
    <h2 class='text-3xl font-bold text-center mt-4 mb-4 text-purple-700'>Forgot your password?</h2>
    <div class='mx-4 flex flex-col justify-center items-center sign-in-form'>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-3xl mt-2 mb-2' %>
        </div>

        <div class="actions">
          <%= f.submit "Reset Password", class: 'bg-purple-600 hover:bg-purple-800 w-72 h-10 rounded-3xl text-white border border-black cursor-pointer mb-4' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>