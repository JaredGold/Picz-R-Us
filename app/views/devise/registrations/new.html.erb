<div class='sign-in-page flex justify-center items-center'>
  <div class='border rounded-3xl border-black border-opacity-25 bg-white shadow-lg sm:4/5 lg:w-2/5  flex flex-col justify-start' >
    <h2 class='text-5xl font-bold text-center mt-4 mb-4 text-purple-700'>Sign up</h2>
    <div class='mx-4 flex flex-col justify-center items-center sign-in-form'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-2">
          <%= f.label :username %><br />
          <%= f.text_field :username, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: 'w-full rounded-3xl mt-2 border border-black' %>
        </div>

        <div class="field mb-2">
          <%= f.submit "Sign up", class: 'bg-purple-600 hover:bg-purple-800 w-64 h-10 rounded-3xl text-white border border-black cursor-pointer mt-2' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>