<p>
  <strong>User:</strong>
  <%= @seller.username.capitalize %>
</p>

<p>
  <strong>Type:</strong>
  <%= @type.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @listing.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<% if @listing.footage.attached? %>
  <p>
    <strong>Footage:</strong>
    <%= image_tag @listing.footage, width: "400px" %>
  </p>
<% end %>

<% if user_signed_in? && @listing.user_id == current_user.id  %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>
<%= link_to 'Back', listings_path %>
