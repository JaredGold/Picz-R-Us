<h1>Listings</h1>

<%= link_to 'New Listing', new_listing_path %>


<% @listings.each do |listing| %>
  <h4><%= listing.name %></h4>
  <%# img_url = url_for(listing.footage, width: 100, height: 100, effect: "cartoonify") %>
  <%= cl_image_tag listing.footage.key, width: 400, :transformation=>[
  {:overlay=>{:font_family=>"Comic Sans MS", :font_size=>150, :font_weight=>"bold", :text=>listing.user.username}, :flags=>"cutter"},
  {:underlay=>listing.footage.key, :opacity=>70, :background=>"black"}
  ]  %>
  <br>
  <%= listing.description %>
  <p>Price: <%= "$"+number_with_precision(listing.price, precision: 2) %></p>
  <%= link_to 'View', listing %>
<% end %>
